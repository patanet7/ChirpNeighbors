# ChirpNeighbors Backend Environment Variables
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
DEBUG=true

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=ChirpNeighbors API
VERSION=0.1.0

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/chirpneighbors
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Security
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_OPENSSL_RAND_HEX_32
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days
ALGORITHM=HS256

# Audio Processing
MAX_AUDIO_FILE_SIZE_MB=10
SUPPORTED_AUDIO_FORMATS=wav,mp3,flac,ogg
AUDIO_SAMPLE_RATE=22050
AUDIO_CHUNK_DURATION=5

# Storage
STORAGE_TYPE=local  # local or s3
STORAGE_PATH=./data/audio

# S3 (if STORAGE_TYPE=s3)
# S3_BUCKET=chirpneighbors-audio
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
